<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diff_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_change_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/touch_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Change Item"
                android:textAllCaps="false"
                android:textColor="@color/new_text_color" />

            <Button
                android:id="@+id/async_change_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/touch_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Async Change Item"
                android:textAllCaps="false"
                android:textColor="@color/new_text_color" />

        </LinearLayout>

        <Button
            android:id="@+id/notify_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/touch_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Item 0 notifyItemChanged (payload) "
            android:textAllCaps="false"
            android:textColor="@color/new_text_color" />
    </LinearLayout>

</LinearLayout>